<h2><%= t('devise.registrations.new.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", hint: t('devise.registrations.new.password', length: @minimum_password_length) if @validatable %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.new.title') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
