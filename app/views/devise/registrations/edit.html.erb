<h2><%= t('devise.registrations.edit.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.registrations.edit.pending_reconfirmation', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", hint: t('devise.registrations.edit.password') %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "off", hint: t('devise.registrations.edit.current_password') %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.submit') %>
  </div>
<% end %>

<h3><%= t('devise.registrations.edit.cancel') %></h3>

<p>Unhappy? <%= button_to t('devise.registrations.edit.cancel'), registration_path(resource_name), data: { confirm: t('common.confirm') }, method: :delete %></p>

<%= link_to t('common.back'), :back %>
