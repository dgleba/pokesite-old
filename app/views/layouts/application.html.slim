doctype html
html lang=I18n.locale
  head
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    title = content_for?(:title) ? join_title(content_for(:title), t("site.title")) : join_title(t("site.title"), t("site.subtitle"))

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tag

  body
    section#header
      = link_to join_title(t("site.title"), t("site.subtitle")), root_url, { id: "logo" }

      nav.top-bar data={topbar: nil} role="navigation"
        ul.title-area
          li.name

        section.top-bar-section
          ul.right
            li.has-dropdown
              = link_to account_signed_in? ? current_account.name : t('devise.sessions.not_signed_in'), "#"
              ul.dropdown
                - if account_signed_in?
                  li = link_to t('devise.registrations.edit.title'), edit_account_registration_path
                  li = link_to t('devise.sessions.destroy'), destroy_account_session_path, method: :delete
                - else
                  li = link_to t('devise.registrations.new.title'), new_account_registration_path
                  li = link_to t('devise.sessions.new'), new_account_session_path

    #flash == display_flash_messages

    section#body == yield

    section#footer
      | Â© #{Time.now.year} #{link_to t("site.title"), root_url}

    = javascript_include_tag "application"
